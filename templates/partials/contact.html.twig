<section id="contact" class="container text-center">
    <div class="port my-title">
        <h2 class="form-title ">Get In Touch.</h2>
    </div>
    
    <div class="info text-center">

        <div class="infos">
            <i class="fa fa-map-marker"></i>
            <p>39000, Lons-le saunier</p>
        </div>

        <div class="infos">
            <i class="fa fa-envelope"></i>
            <p>otmane.ez@outlook.fr</p>
        </div>

        <div class="infos">
            <i class="fa fa-phone"></i>
            <p>+33 644 159 679</p>
        </div>
    </div>

    <div class="row contact">
        
        <div class="col-xs-12 col-sm-12  col-md-12 col-lg-12 ">

            <h3 class="form-title">Or leave me a message</h3 class="form-title">

            {% set flashbag = app.session.flashbag.all %}
            {% if flashbag|length > 0 %}
                {% for key, message in flashbag %}
                    <div class="alert alert-{{ key }}" role="alert">
                        <div class="flash-message">
                            {% for text in message %}
                                {{ text }}
                            {% endfor %}
                                
                        </div>
                        
                    </div>
                {% endfor %}
            {% endif %}
                
             {{ form_start(form) }}
                
                <div class="form-group">
                    {{ form_row(form.name_exp) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.mail_exp) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.subject) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.message) }}
                </div>
                <div class="text-centre">
                    {{ form_row(form.send) }}
                </div>
                
            {{ form_end(form) }}

        </div>

    </div>
    
</section>

